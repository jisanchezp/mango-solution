@model RegistrationRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row text-center">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name..." />
                <span asp-validation-summary="All" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email..." />
                <span asp-validation-summary="All" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="PhoneNumber..." />
                <span asp-validation-summary="All" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-summary="All" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList" >
                    <option disabled selected>-- Select Role --</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>